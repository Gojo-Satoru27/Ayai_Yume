local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- Tạo GUI chính
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0.3, 0, 0.25, 0)
Frame.Position = UDim2.new(0.35, 0, 0.35, 0)
Frame.BackgroundColor3 = Color3.fromRGB(44, 47, 51) -- Nền xám như Roblox
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Bo góc Frame
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = Frame

-- Tiêu đề
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.BackgroundTransparency = 1
Title.Text = "Nhập Key Để Tiếp Tục"
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.Parent = Frame

-- Ô nhập Key
local TextBox = Instance.new("TextBox")
TextBox.Size = UDim2.new(0.8, 0, 0.25, 0)
TextBox.Position = UDim2.new(0.1, 0, 0.35, 0)
TextBox.BackgroundColor3 = Color3.fromRGB(35, 39, 42) -- Nền xám đậm
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255) -- Chữ trắng
TextBox.PlaceholderText = "Nhập Key..."
TextBox.TextScaled = true
TextBox.Font = Enum.Font.SourceSans
TextBox.Parent = Frame

-- Bo góc TextBox
local TextBoxCorner = Instance.new("UICorner")
TextBoxCorner.CornerRadius = UDim.new(0, 8)
TextBoxCorner.Parent = TextBox

-- Nút xác nhận
local SubmitButton = Instance.new("TextButton")
SubmitButton.Size = UDim2.new(0.6, 0, 0.25, 0)
SubmitButton.Position = UDim2.new(0.2, 0, 0.7, 0)
SubmitButton.BackgroundColor3 = Color3.fromRGB(0, 162, 255) -- Xanh Roblox
SubmitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SubmitButton.Text = "Xác nhận"
SubmitButton.TextScaled = true
SubmitButton.Font = Enum.Font.SourceSansBold
SubmitButton.Parent = Frame

-- Bo góc SubmitButton
local ButtonCorner = Instance.new("UICorner")
ButtonCorner.CornerRadius = UDim.new(0, 8)
ButtonCorner.Parent = SubmitButton

-- Hiệu ứng khi bấm nút
SubmitButton.MouseEnter:Connect(function()
    SubmitButton.BackgroundColor3 = Color3.fromRGB(0, 145, 230) -- Đổi màu khi di chuột vào
end)

SubmitButton.MouseLeave:Connect(function()
    SubmitButton.BackgroundColor3 = Color3.fromRGB(0, 162, 255) -- Trở lại màu gốc
end)

-- Danh sách Key
local keys = {
    ["thongdeptrai"] = "https://raw.githubusercontent.com/Gojo-Satoru27/Ayai_Yume/refs/heads/main/ALLGAME",
    ["thongdepzai"] = "https://raw.githubusercontent.com/Gojo-Satoru27/Ayai_Yume/refs/heads/main/KAITUN"
}

-- Hiển thị thông báo
local function showMessage(message, duration)
    Title.Text = message
    wait(duration)
    Title.Text = "Nhập Key Để Tiếp Tục"
end

-- Kiểm tra Key
local function checkKey(userInput)
    if keys[userInput] then
        -- Ẩn Frame sau khi nhập đúng Key
        Frame.Visible = false
        
        if userInput == "thongdeptrai" then
            showMessage("Cảm ơn bạn đã mua key Premium", 3)
        elseif userInput == "thongdepzai" then
            showMessage("Key Free, nếu muốn dùng tốt hơn hãy mua Premium!", 3)
        end
        
        wait(2)
        print("Đang tải script từ: " .. keys[userInput])

        local success, scriptContent = pcall(function()
            return game:HttpGet(keys[userInput])
        end)

        if success and scriptContent then
            print("Script tải về thành công!")
            local runSuccess, err = pcall(loadstring(scriptContent))
            if not runSuccess then
                warn("Lỗi khi chạy script: " .. err)
                showMessage("Lỗi khi thực thi script!", 3)
            end
        else
            warn("Lỗi tải script từ URL!")
            showMessage("Lỗi tải script!", 3)
        end
    else
        showMessage("Key sai! Vui lòng nhập lại.", 3)
    end
end

-- Kết nối sự kiện bấm nút
SubmitButton.MouseButton1Click:Connect(function()
    checkKey(TextBox.Text)
    TextBox.Text = ""
end)
