
local key_dung = "thongdeptrai"

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextBox = Instance.new("TextBox")
local Button = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Frame.Position = UDim2.new(0.35, 0, 0.4, 0)
Frame.Size = UDim2.new(0, 300, 0, 150)

UICorner.Parent = Frame

TextBox.Parent = Frame
TextBox.PlaceholderText = "Nhập key..."
TextBox.Position = UDim2.new(0.1, 0, 0.2, 0)
TextBox.Size = UDim2.new(0.8, 0, 0.3, 0)
TextBox.Text = ""
TextBox.TextScaled = true

Button.Parent = Frame
Button.Text = "Xác nhận"
Button.Position = UDim2.new(0.3, 0, 0.6, 0)
Button.Size = UDim2.new(0.4, 0, 0.3, 0)

Button.MouseButton1Click:Connect(function()
    if TextBox.Text == key_dung then
        ScreenGui:Destroy()
        print("Key chính xác! Đang chạy script...")
        -- Load script gốc từ file KEY.txt
        loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
    else
        TextBox.Text = "Sai key!"
    end
end)
