-- Tải thư viện OrionLib
local success, OrionLib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()
end)

if not success then
    warn("Không thể tải thư viện OrionLib. Hãy kiểm tra URL!")
    return
end

-- Cửa sổ chính
local Window = OrionLib:MakeWindow({
    Name = "Script Tổng hợp",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "dxl_bf"
})

-- Thông báo khi bật script
OrionLib:MakeNotification({
    Name = "Script made by Thong",
    Content = "Join Discord: https://discord.gg/3Tp35BhYeG để lấy script mới nhất.",
    Image = "rbxassetid://4483345998",
    Time = 10 -- Thời gian thông báo hiển thị (giây)
})

-- Tab BLOX FRUIT (Tab 1)
local Tab1 = Window:MakeTab({
    Name = "BLOX FRUIT",
    Icon = "rbxassetid://97129433129151",
    PremiumOnly = false
})

-- MARU HUB
Tab1:AddButton({
    Name = "Maru Hub",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Ghost-1198/Main/refs/heads/main/PearCatHubNew.lua"))()
    end    
})

-- Các nút khác
Tab1:AddButton({
    Name = "Domadic Hub",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Domadicoof/Domadicoof/main/Domadichub/NottoGay/Start.ranscript"))()
    end    
})

Tab1:AddButton({
    Name = "FTS X Hub!",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/tufreescript/FTS-X-Hub/main/FTSXHUB%20V1'))()
    end    
})

Tab1:AddButton({
    Name = "T7GFY GUI",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/minded102/dokinbog/main/README.md", true))()
    end    
})

-- Tab King Legacy (Tab 2)
local Tab2 = Window:MakeTab({
    Name = "King Legacy",
    Icon = "rbxassetid://97129433129151",
    PremiumOnly = false
})

-- Các nút trong Tab King Legacy
Tab2:AddButton({
    Name = "MOKURO HUB",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/xDepressionx/Free-Script/main/KingLegacy.lua"))()
    end    
})

Tab2:AddButton({
    Name = "Hydra Hub",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/KindIhave/Script/main/KingLegacy"))()
    end    
})

-- Tab Meme Sea (Tab3)
local Tab3 = Window:MakeTab({
	Name = "Meme Sea",
	Icon = "rbxassetid://97129433129151",
	PremiumOnly = false
})

-- Các nút trong Tab Meme Sea
