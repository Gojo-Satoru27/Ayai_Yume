-- Tải và chạy thư viện Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Tải các tiện ích bổ sung
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Tạo cửa sổ chính
local Window = Fluent:CreateWindow({
    Title = "Script Tổng Hợp",
    SubTitle = "made by Thong",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 360),
    Acrylic = true,
    Theme = "Dark", -- Đặt chủ đề
    MinimizeKey = Enum.KeyCode.End
})

-- Tạo các tab
local Tabs = {
    ALL = Window:AddTab({ Title = "All Map" }),
    BloxFruits = Window:AddTab({ Title = "Blox Fruits" }),
    KL = Window:AddTab({ Title = "King Legacy" }),
    AD = Window:AddTab({ Title = "Anime Defense" }),
    AV = Window:AddTab({ Title = "Anime Vanguard" }),
    AR = Window:AddTab({ Title = "Reborn" }),
    MS = Window:AddTab({ Title = "Meme Sea" }),
    D = Window:AddTab({ Title = "Doors" }),
    F = Window:AddTab({ Title = "Fisch" }),
    PG = Window:AddTab({ Title = "Pets Go" }),
    E = Window:AddTab({ Title = "Evade" })
}

-- Tạo GUI chính
local ScreenGui = Instance.new("ScreenGui")
local ImageButton = Instance.new("ImageButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

ImageButton.Parent = ScreenGui
ImageButton.BackgroundTransparency = 1
ImageButton.Image = "rbxassetid://91409498103068"
ImageButton.BorderSizePixel = 0
ImageButton.Position = UDim2.new(0.10083337, 0, 0.09, 0)
ImageButton.Size = UDim2.new(0, 50, 0, 50)
ImageButton.Draggable = true
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = ImageButton

ImageButton.MouseButton1Down:Connect(function()
    game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.End, false, game)
end)

-- Thêm chức năng vào tab "ALL"
Tabs.ALL:AddButton({
    Title = "Script được tạo bởi Thong",
    Callback = function()
        print("Script đã chạy thành công!")
    end
})

Tabs.ALL:AddButton({
    Title = "Update 1",
    Description = "trạng thái script No Key",
    Callback = function()
        _G.Settings = {
            LowDetail = true,
            Images = { Invisible = true, Destroy = false },
            ["No Particles"] = true,
            ["No Camera Effects"] = true
        }
        print("Boost FPS thành công!")
    end
})

-- Thêm các script vào tab "Blox Fruits"
local BloxFruitsScripts = {
    { Title = "Alchemy Hub", Description = "No Key", URL = "https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/FPSBooster.lua" },
    { Title = "[New] Redz Hub", Description = "No Key", URL = "https://raw.githubusercontent.com/realredz/BloxFruits/refs/heads/main/Source.lua" },
    { Title = "Andepzai Hub", Description = "No Key", URL = "https://raw.githubusercontent.com/AndepzaiHubBeta/ref/main/AndepzaiNewUpdated.lua" },
    { Title = "W Azure", Description = "No Key", URL = "https://api.luarmor.net/files/v3/loaders/3b2169cf53bc6104dabe8e19562e5cc2.lua" },
    { Title = "Zee Hub", Description = "Need Key", URL = "https://zuwz.me/Ls-Zee-Hub-KL" },
    { Title = "Nope Hub Auto Chest", Description = "Need Key", URL = "https://raw.githubusercontent.com/Zunes-Bypassed/NOPE/main/NOPE.lua" },
    { Title = "Panda Hub Find Fruits", Description = "No Key", URL = "https://raw.githubusercontent.com/PNguyen0199/Script/main/Fai-Fao-Ver2.lua" },
    { Title = "Hoho Hub V4", Description = "Need Key", URL = "https://raw.githubusercontent.com/acsu123/HOHO_H/main/Loading_UI" },
    { Title = "Zen Hub", Description = "Need Key", URL = "https://raw.githubusercontent.com/Zenhubtop/zen%5Fhub/pr/main/zennewwwui.lua" },
    { Title = "BT Project", Description = "Need Key", URL = "https://lua-library.btteams.net/script-auth.txt" },
    { Title = "OMG Hub", Description = "Need Key", URL = "https://raw.githubusercontent.com/Omgshit/Scripts/main/MainLoader.lua" },
    { Title = "Nousigi Hub", Description = "Need Key", URL = "https://raw.githubusercontent.com/scriptpastebin/raw/main/Nousigi" },
    { Title = "Buang Hub", Description = "Need Key", URL = "https://raw.githubusercontent.com/buang5516/buanghub/main/BUANGHUB.lua" }
}

for _, script in ipairs(BloxFruitsScripts) do
    Tabs.BloxFruits:AddButton({
        Title = script.Title,
        Description = script.Description,
        Callback = function()
            loadstring(game:HttpGet(script.URL, true))()
        end
    })
end
