-- Tải thư viện Orion (thay thế bằng thư viện bạn đang sử dụng)
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/daucobonhi/Ui-Redz-V2/refs/heads/main/UiREDzV2.lua"))()

-- Thông báo khi bật script
OrionLib:MakeNotification({
    Name = "Script Bởi Thong",
    Content = "Join Discord: https://discord.gg/3Tp35BhYeG để lấy script mới nhất.",
    Image = "rbxassetid://4483345998",
    Time = 60
})

-- Tạo cửa sổ giao diện
local Window = OrionLib:MakeWindow({
    Name = "Thong Roblox",
    SaveConfig = true,
    ConfigFolder = "ThongHub"
})

-- Tạo các tab
local TabMain = Window:MakeTab({Name = "Chính"})
local TabBloxFruits = Window:MakeTab({Name = "Blox Fruits"})
local TabKingLegacy = Window:MakeTab({Name = "King Legacy"})

-- Thêm nội dung vào tab "Chính"
TabMain:AddLabel("Script này được tạo bởi Thong")
TabMain:AddLabel("Join Discord: https://discord.gg/3Tp35BhYeG để lấy script mới nhất")
TabMain:AddLabel("UPDATE: 24/1/2025")
TabMain:AddLabel("Trạng thái cập nhật: Đang update")

-- Các nút bấm trong Tab "King Legacy"
local buttons = {
    {Name = "KIMP GAMING V1", URL = "https://raw.githubusercontent.com/tuyenkimp/KimP-Hub/refs/heads/main/luxucuthanh.txt"},
    {Name = "KIMP GAMING V2", URL = "https://raw.githubusercontent.com/Tuyenhuu1122/KimP-Ver2/refs/heads/main/Kimproblox"},
    {Name = "SPEED HUB", URL = "https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua"},
    {Name = "BAP RED", URL = "https://raw.githubusercontent.com/LuaCrack/BapRed/main/BapRedHub"},
    {Name = "RAITO HUB", URL = "https://raw.githubusercontent.com/Efe0626/RaitoHub/refs/heads/main/Script"},
    {Name = "BLUE X", URL = "https://raw.githubusercontent.com/Dev-BlueX/BlueX-Hub/refs/heads/main/EN.lua"},
    {Name = "REDZ HUB", Callback = function()
        local Settings = {JoinTeam = "Pirates", Translator = true};
        loadstring(game:HttpGet("https://raw.githubusercontent.com/realredz/BloxFruits/refs/heads/main/Source.lua"))(Settings)
    end}
}

-- Tạo các nút bấm từ danh sách
for _, button in ipairs(buttons) do
    TabKingLegacy:AddButton({
        Name = button.Name,
        Callback = button.Callback or function()
            loadstring(game:HttpGet(button.URL))()
        end
    })
end

-- Khởi chạy giao diện
OrionLib:Init()
