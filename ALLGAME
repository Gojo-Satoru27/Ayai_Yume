loadstring(game:HttpGet("https://raw.githubusercontent.com/daucobonhi/Ui-Redz-V2/refs/heads/main/UiREDzV2.lua"))()

-- Window Setup
local Window = MakeWindow({
    Hub = {
        Title = "KimP Roblox",
        Animation = "Script Tổng Hợp"
    },
    Key = {
        KeySystem = true,  -- Enable Key System
        Title = "Key System",
        Description = "Enter the key to continue.",
        KeyLink = "",  -- You can specify a link for the key if needed
        Keys = {"1234"},  -- Define valid keys here
        Notifi = {
            Notifications = true,
            CorrectKey = "Running the Script...",
            IncorrectKey = "The key is incorrect",
            CopyKeyLink = "Copied to Clipboard"
        }
    }
})

-- Function to handle the key input
local function CheckKey(inputKey)
    local validKeys = {"1234"}  -- List your valid keys here
    for _, key in pairs(validKeys) do
        if inputKey == key then
            return true
        end
    end
    return false
end

-- Key input dialog
local inputKey = game:GetService("UserInputService"):InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.Return then  -- Check for 'Enter' key press
        if CheckKey(input.Text) then
            Window.Key.Notifi.CorrectKey = "Running the Script..."
            -- Proceed to allow the script to run
            -- (Add the rest of the script execution here)
        else
            Window.Key.Notifi.IncorrectKey = "The key is incorrect"
        end
    end
end)

-- GUI setup (example)
MinimizeButton({
    Image = "http://www.roblox.com/asset/?id=74510980295786",
    Size = {50, 50},
    Color = Color3.fromRGB(10, 10, 10),
    Corner = true,
    Stroke = false,
    StrokeColor = Color3.fromRGB(255, 0, 0)
})

-- Tab
local Tab1o = MakeTab({Name = "Script Mới"})

