-- Tải và chạy thư viện Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Tải các tiện ích bổ sung
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Tạo cửa sổ chính
local Window = Fluent:CreateWindow({
    Title = "Script Tổng Hợp",
    SubTitle = "Update 1.5",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 360),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.End
})

-- Tạo các tab
local Tabs = {
    ALL = Window:AddTab({ Title = "All Map", Icon = "" }),
    BloxFruits = Window:AddTab({ Title = "Blox Fruits", Icon = "" }),
    KL = Window:AddTab({ Title = "King Legacy", Icon = "" }),
    AD = Window:AddTab({ Title = "Anime Defense", Icon = "" }),
    AV = Window:AddTab({ Title = "Anime Venguard", Icon = "" }),
    AR = Window:AddTab({ Title = "Reborn", Icon = "" }),
    MS = Window:AddTab({ Title = "Meme Sea", Icon = "" }),
    D = Window:AddTab({ Title = "Doors", Icon = "" }),
    F = Window:AddTab({ Title = "Fisch", Icon = "" }),
    PG = Window:AddTab({ Title = "Pets Go", Icon = "" }),
    E = Window:AddTab({ Title = "Evade", Icon = "" })
})

-- Tạo GUI chính
local ScreenGui = Instance.new("ScreenGui")
local MenuButton = Instance.new("ImageButton")
local UICorner = Instance.new("UICorner")
local MenuFrame = Instance.new("Frame")
local isMenuOpen = false  -- Biến theo dõi trạng thái của menu

-- Cài đặt GUI
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Cấu hình nút menu (nút ẩn/hiện menu)
MenuButton.Parent = ScreenGui
MenuButton.BackgroundTransparency = 1
MenuButton.ImageColor3 = Color3.fromRGB(0, 0, 0) -- Màu đen
MenuButton.BorderSizePixel = 0
MenuButton.Position = UDim2.new(0.10083337, 0, 0.09, 0) -- Vị trí
MenuButton.Size = UDim2.new(0, 50, 0, 50) -- Kích thước
MenuButton.Draggable = true
MenuButton.Image = "http://www.roblox.com/asset/?id=<YOUR_IMAGE_ID>" -- Đặt ID hình ảnh của bạn ở đây
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MenuButton

-- Cấu hình menu (nội dung sẽ hiển thị)
MenuFrame.Parent = ScreenGui
MenuFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)  -- Màu nền menu
MenuFrame.Size = UDim2.new(0, 160, 0, 300)
MenuFrame.Position = UDim2.new(0.2, 0, 0.1, 0)  -- Vị trí của menu
MenuFrame.Visible = false  -- Ban đầu menu sẽ ẩn

-- Cập nhật trạng thái mở/đóng menu
MenuButton.MouseButton1Down:Connect(function()
    if isMenuOpen then
        MenuFrame.Visible = false
        isMenuOpen = false
    else
        MenuFrame.Visible = true
        isMenuOpen = true
    end
end)

-- Thêm các nút vào menu
local function addMenuButton(title, callback)
    local Button = Instance.new("TextButton")
    Button.Parent = MenuFrame
    Button.Size = UDim2.new(1, 0, 0, 30)
    Button.Text = title
    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Font = Enum.Font.Gotham
    Button.TextSize = 14
    Button.BorderSizePixel = 0

    Button.MouseButton1Click:Connect(callback)
end

-- Thêm các nút chức năng vào menu
addMenuButton("Chạy Script", function()
    print("Script đã chạy thành công!")
end)

addMenuButton("Script Boost FPS (Fix Lag)", function()
    _G.Settings = {
        LowDetail = true,
        Images = {
            Invisible = true,
            Destroy = false
        },
        ["No Particles"] = true,
        ["No Camera Effects"] = true
    }
    print("Boost FPS thành công!")
end)

addMenuButton("Alchemy Hub", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/FPSBooster.lua"))()
end)

addMenuButton("[New] Redz Hub", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/realredz/BloxFruits/refs/heads/main/Source.lua"))()
end)

-- Các nút khác tiếp tục như trước...
